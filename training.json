{
    "info": {
        "name": "Training API",
        "description": "Postman collection for Training Page API endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_postman_id": "training-api-collection",
        "version": {
            "major": 1,
            "minor": 0,
            "patch": 0
        }
    },
    "item": [
        {
            "name": "Public Endpoints",
            "item": [
                {
                    "name": "Get All Training Pages",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{BASE_URL}}/api/training",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "training"
                            ]
                        },
                        "description": "Get all active training pages"
                    },
                    "response": []
                },
                {
                    "name": "Get Training Page by Slug",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{BASE_URL}}/api/training/advanced-training-solutions",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "training",
                                "advanced-training-solutions"
                            ]
                        },
                        "description": "Get training page by slug"
                    },
                    "response": []
                },
                {
                    "name": "Get Training Page by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{BASE_URL}}/api/training/id/{{TRAINING_ID}}",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "training",
                                "id",
                                "{{TRAINING_ID}}"
                            ]
                        },
                        "description": "Get training page by ID"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Admin Endpoints",
            "item": [
                {
                    "name": "Create Training Page",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{AUTH_TOKEN}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "name",
                                    "value": "Advanced Training Solutions",
                                    "type": "text"
                                },
                                {
                                    "key": "slug",
                                    "value": "advanced-training-solutions",
                                    "type": "text"
                                },
                                {
                                    "key": "description",
                                    "value": "Comprehensive professional development programs",
                                    "type": "text"
                                },
                                {
                                    "key": "heroContent[title]",
                                    "value": "Advanced Training Solutions",
                                    "type": "text"
                                },
                                {
                                    "key": "heroContent[description]",
                                    "value": "Comprehensive professional development programs designed to elevate your team's skills",
                                    "type": "text"
                                },
                                {
                                    "key": "trainingPrograms",
                                    "value": "[{\"id\":1,\"title\":\"Technical Training\",\"shortDescription\":\"Master technical skills\",\"longDescription\":\"Detailed description\",\"features\":[\"Feature 1\",\"Feature 2\"]}]",
                                    "type": "text",
                                    "description": "JSON array of training programs"
                                },
                                {
                                    "key": "keyModules",
                                    "value": "[{\"title\":\"Fundamentals\",\"description\":\"Build strong foundational knowledge\",\"duration\":\"2-3 days\"}]",
                                    "type": "text",
                                    "description": "JSON array of key modules"
                                },
                                {
                                    "key": "trainingFeatures",
                                    "value": "[{\"id\":1,\"title\":\"Expert Instructors\",\"shortDescription\":\"Learn from industry practitioners\",\"benefits\":[\"Benefit 1\",\"Benefit 2\"]}]",
                                    "type": "text",
                                    "description": "JSON array of training features"
                                },
                                {
                                    "key": "heroBackgroundVideo",
                                    "type": "file",
                                    "description": "Background video for hero section"
                                },
                                {
                                    "key": "heroBackgroundImage",
                                    "type": "file",
                                    "description": "Background image for hero section"
                                },
                                {
                                    "key": "trainingHeroImage",
                                    "type": "file",
                                    "description": "Training hero image"
                                },
                                {
                                    "key": "trainingProgramsImage",
                                    "type": "file",
                                    "description": "Training programs image"
                                },
                                {
                                    "key": "whyChooseImage",
                                    "type": "file",
                                    "description": "Why choose image"
                                },
                                {
                                    "key": "programMedia",
                                    "type": "file",
                                    "description": "Media files for programs (can upload multiple)"
                                },
                                {
                                    "key": "moduleMedia",
                                    "type": "file",
                                    "description": "Media files for modules (can upload multiple)"
                                },
                                {
                                    "key": "featureMedia",
                                    "type": "file",
                                    "description": "Media files for features (can upload multiple)"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/api/training",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "training"
                            ]
                        },
                        "description": "Create new training page with multiple file uploads"
                    },
                    "response": []
                },
                {
                    "name": "Update Training Page",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{AUTH_TOKEN}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "name",
                                    "value": "Updated Training Name",
                                    "type": "text"
                                },
                                {
                                    "key": "description",
                                    "value": "Updated description",
                                    "type": "text"
                                },
                                {
                                    "key": "heroContent[title]",
                                    "value": "Updated Hero Title",
                                    "type": "text"
                                },
                                {
                                    "key": "heroBackgroundVideo",
                                    "type": "file",
                                    "description": "New background video (optional)"
                                },
                                {
                                    "key": "trainingPrograms",
                                    "value": "[{\"id\":1,\"title\":\"Updated Program\",\"shortDescription\":\"Updated description\"}]",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/api/training/{{TRAINING_ID}}",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "training",
                                "{{TRAINING_ID}}"
                            ]
                        },
                        "description": "Update training page"
                    },
                    "response": []
                },
                {
                    "name": "Delete Training Page",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{AUTH_TOKEN}}"
                            }
                        ],
                        "url": {
                            "raw": "{{BASE_URL}}/api/training/{{TRAINING_ID}}",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "training",
                                "{{TRAINING_ID}}"
                            ]
                        },
                        "description": "Delete training page and associated files"
                    },
                    "response": []
                },
                {
                    "name": "Toggle Training Page Status",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{AUTH_TOKEN}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{BASE_URL}}/api/training/{{TRAINING_ID}}/toggle-status",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "training",
                                "{{TRAINING_ID}}",
                                "toggle-status"
                            ]
                        },
                        "description": "Toggle active/inactive status of training page"
                    },
                    "response": []
                },
                {
                    "name": "Upload Training Media",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{AUTH_TOKEN}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "media",
                                    "type": "file",
                                    "description": "Image or video file to upload"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/api/training/upload-media",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "training",
                                "upload-media"
                            ]
                        },
                        "description": "Upload media file (image or video)"
                    },
                    "response": []
                },
                {
                    "name": "Delete Training Media",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{AUTH_TOKEN}}"
                            }
                        ],
                        "url": {
                            "raw": "{{BASE_URL}}/api/training/delete-media/{{MEDIA_TYPE}}/{{MEDIA_FILENAME}}",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "training",
                                "delete-media",
                                "{{MEDIA_TYPE}}",
                                "{{MEDIA_FILENAME}}"
                            ]
                        },
                        "description": "Delete specific media file. MEDIA_TYPE should be 'images' or 'videos'"
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "BASE_URL",
            "value": "http://localhost:5005",
            "type": "string"
        },
        {
            "key": "AUTH_TOKEN",
            "value": "your-jwt-token-here",
            "type": "string"
        },
        {
            "key": "TRAINING_ID",
            "value": "60d0fe4f5311236168a109cb",
            "type": "string"
        },
        {
            "key": "MEDIA_TYPE",
            "value": "images",
            "type": "string",
            "description": "Either 'images' or 'videos'"
        },
        {
            "key": "MEDIA_FILENAME",
            "value": "1234567890-123456789.jpg",
            "type": "string"
        }
    ]
}